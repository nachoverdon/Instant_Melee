{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\Core\\*.c",
                "-o",
                "${workspaceFolder}\\instant_melee.exe",
                "-lwinmm",
                "'-lusb-1.0'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}